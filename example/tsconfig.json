{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "incremental": false,
    "lib": ["dom", "esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "node_modules/.tmp/dist",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2019",
    "baseUrl": ".",
    "paths": {
      "@generated/*": ["src/generated/*"],
      "@modules/*": ["src/modules/*"],
      "@prisma/client": ["node_modules/@prisma/generated/"]
    }
  },
  "exclude": ["node_modules", "dist", "graphql"]
}
